@using GameStoreMVC.Models

@model List<GamesPO>
@{
    ViewBag.Title = "OrderDetails";
}

<h2>OrderDetails</h2>



<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Game
            </th>
            <th>
                System
            </th>
            <th>
                Genre
            </th>
            <th>
                Release Date
            </th>
            <th>
                Price
            </th>
        </tr>
    </thead>

    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (GamesPO item in Model)
            {
            <tr>
                <td>
                    @item.GameName
                </td>
                <td>
                    @item.System
                </td>
                <td>
                    @item.Genre
                </td>
                <td>
                    @item.ReleaseDate.ToShortDateString()
                </td>
                <td>
                    @item.Price
                </td>
            </tr>
            }
        }
        else if(TempData.ContainsKey("Message"))
        {
            <tr>
                <td colspan="5">
                    @TempData["Message"]
                </td>
            </tr>
        }
    </tbody>
</table>